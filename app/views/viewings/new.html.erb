<p>Booking for: <strong><%= @booking.car.make %> <%= @booking.car.model %></strong></p>

<%= form_with model: [@booking, @viewing], local: true do |f| %>
  <div>
    <%= f.label :scheduled_date, "Preferred Date & Time" %><br>
    <%= f.datetime_local_field :scheduled_date, style: "width:100%;padding:8px;border:1px solid #ccc;border-radius:8px;" %>
  </div>

  <div style="margin-top:10px;">
    <%= f.label :notes, "Additional Notes (optional)" %><br>
    <%= f.text_area :notes, style: "width:100%;min-height:80px;padding:8px;border:1px solid #ccc;border-radius:8px;" %>
  </div>

  <%= f.submit "Confirm Viewing", style: "margin-top:12px;background:#2563eb;color:white;padding:10px 16px;border:none;border-radius:8px;cursor:pointer;" %>
<% end %>
