<div class="booking-card">
  <!-- Header -->
  <div class="booking-header">
    <h3>Booking for <%= booking.car.name %></h3>
    <span class="status <%= booking.status %>"><%= booking.status.titleize %></span>
  </div>

  <!-- Renter Info -->
  <div class="booking-info">
    <p><strong>Renter Name:</strong> <%= booking.renter.full_name.presence || "Not provided" %></p>
    <p><strong>Email:</strong> <%= booking.renter.email %></p>
    <p><strong>Phone:</strong> <%= booking.renter.phone_number %></p>
    <p><strong>ID Number:</strong> <%= booking.id_number || "Not provided" %></p>
    <p><strong>Nationality:</strong> <%= booking.nationality %></p>
    <p><strong>Purpose:</strong> <%= booking.purpose %></p>
  </div>

  <!-- Booking Details -->
  <div class="booking-details">
    <p><strong>Start:</strong> <%= booking.start_time&.strftime("%b %d, %Y %I:%M %p") || "Not set" %></p>
    <p><strong>Return:</strong> <%= booking.planned_return_at&.strftime("%b %d, %Y %I:%M %p") || "Not set" %></p>
    <p><strong>Delivery:</strong> <%= booking.delivery_method %></p>
    <p><strong>Pickup:</strong> <%= booking.pickup_location || "Not provided" %></p>
    <p><strong>Driver:</strong> <%= booking.has_driver? ? "Yes" : "No" %></p>
  </div>

  <!-- Payment Status -->
  <div id="booking_payment_<%= booking.id %>" class="booking-payment">
    <%= render "owners/booking_payment_status", booking: booking %>
  </div>

  <!-- Status Partial -->
  <%= render "bookings/status", booking: booking %>

  <!-- Actions + Rental Summary -->
  <div id="booking_actions_<%= booking.id %>" class="booking-actions">
    <%= render "bookings/booking_actions", booking: booking, is_owner: (booking.car.owner == current_user) %>

    <% if booking.pending_deposit? %>
      <%= button_to "Approve", approve_booking_path(booking), method: :patch,
                    data: { turbo_stream: true }, class: "btn btn-approve" %>
      <%= button_to "Reject", reject_booking_path(booking), method: :patch,
                    data: { turbo_stream: true }, class: "btn btn-reject" %>
    <% end %>

    <%= render "bookings/rental_summary", booking: booking, is_owner: (booking.car.owner == current_user) %>
  </div>
</div>
<!-- Booking Management Styles -->
<style>
