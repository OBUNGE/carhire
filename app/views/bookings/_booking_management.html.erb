  margin: 0.3rem 0;
}

.booking-payment {
  margin: 1rem 0;
}

.booking-actions {
  display: flex;
  gap: 0.8rem;
  margin-top: 1rem;
}

.btn {
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 6px;
  font-size: 0.9rem;
  cursor: pointer;
}

.btn-approve {
  background: #28a745;
  color: #fff;
}

.btn-approve:hover {
  background: #218838;
}

.btn-reject {
  background: #dc3545;
  color: #fff;
}

.btn-reject:hover {
  background: #c82333;
}

.no-bookings {
  color: #666;
  font-style: italic;
}

/* Responsive tweaks */
@media (max-width: 600px) {
  .booking-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .booking-actions {
    flex-direction: column;
  }

  .btn {
    width: 100%;
    text-align: center;
  }
}
</style>
