  display: grid;
  grid-template-columns: 1fr 2fr; /* left narrower, right wider */
  gap: 1.5rem;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 12px;
  padding: 1.2rem;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  margin-bottom: 1.5rem;
}

