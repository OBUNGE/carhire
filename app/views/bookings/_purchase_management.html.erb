<!-- Purchase Management -->
<div style="margin-top:48px;">
  <h2 style="font-size:22px;font-weight:bold;margin-bottom:16px;">Purchase Requests for Your Cars</h2>
  <% if @owner_purchases.any? %>
    <div style="display:flex;flex-direction:column;gap:20px;">
      <% @owner_purchases.each do |purchase| %>
        <div style="border:1px solid #ddd;padding:20px;border-radius:12px;background:#fff;box-shadow:0 2px 6px rgba(0,0,0,0.05);">
          <h3 style="font-size:18px;font-weight:600;margin-bottom:10px;">
            Purchase request for <%= purchase.car.name %>
          </h3>
          <p><strong>Buyer Name:</strong> <%= purchase.user.full_name %></p>
          <p><strong>Buyer Email:</strong> <%= purchase.user.email %></p>
          <p><strong>Buyer Contact:</strong> <%= purchase.buyer_contact %></p>
          <p><strong>Message:</strong> <%= purchase.message %></p>
          <p><strong>Status:</strong> <%= purchase.status.titleize %></p>
          <div style="margin-top:12px;display:flex;gap:12px;">
            <% if purchase.pending? %>
              <%= button_to "Approve Sale", approve_purchase_path(purchase), method: :patch, local: true, style: "padding:8px 14px;background:#16a34a;color:#fff;border:none;border-radius:6px;cursor:pointer;" %>
              <%= button_to "Reject Sale", reject_purchase_path(purchase), method: :patch, local: true, style: "padding:8px 14px;background:#dc2626;color:#fff;border:none;border-radius:6px;cursor:pointer;" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p style="color:#6b7280;">No purchase requests for your cars yet.</p>
  <% end %>
</div>