<div id="booking_actions_<%= booking.id %>" class="p-4 bg-white rounded border space-y-4">
  <h3 class="font-semibold text-lg">Customize Bills</h3>

  <%= form_with model: booking,
                url: update_invoice_booking_path(booking),
                method: :patch,
                data: { turbo_stream: true } do |f| %>

    <div>
      <%= f.label :car_wash_fee, "Car wash fee (KES)" %>
      <%= f.number_field :car_wash_fee, step: "0.01", class: "form-input" %>
    </div>

    <div>
      <%= f.label :damage_fee, "Damage fee (KES)" %>
      <%= f.number_field :damage_fee, step: "0.01", class: "form-input" %>
    </div>

    <div>
      <%= f.label :custom_adjustment, "Custom adjustment (KES)" %>
      <%= f.number_field :custom_adjustment, step: "0.01", class: "form-input" %>
    </div>

    <div>
      <%= f.label :overtime_fee_override, "Overtime fee override (KES)" %>
      <%= f.number_field :overtime_fee_override, step: "0.01", class: "form-input" %>
    </div>

    <div class="mt-3 flex gap-2">
      <%= f.submit "Save Changes", class: "px-3 py-2 bg-green-600 text-white rounded hover:bg-green-500" %>

      <%= link_to "Cancel",
                  booking_actions_booking_path(booking),
                  data: { turbo_stream: true },
                  class: "px-3 py-2 bg-gray-300 rounded hover:bg-gray-400" %>
    </div>
  <% end %>
</div>
